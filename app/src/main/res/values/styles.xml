<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppNewNetwork.FormContainer">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="Theme.AppNewNetwork.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="Theme.AppNewNetwork.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="cornerRadius">300dp</item>

        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>

        <item name="android:padding">13dp</item>
        <item name="android:layout_marginBottom">24dp</item>

    </style>

    <style name="Theme.AppNewNetwork.TextViewBase" parent="Theme.AppNewNetwork.FormContainer">
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.AppNewNetwork.TextViewComments">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Theme.AppNewNetwork.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Theme.AppNewNetwork.TextViewWelcome">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.AppNewNetwork.TextViewBaseOrangeDarker" parent="Theme.AppNewNetwork.FormContainer">
        <item name="android:textColor">@color/gray_suit</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.AppNewNetwork.Link" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Theme.AppNewNetwork.TextViewProfile">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Theme.AppNewNetwork.ButtonProfile" >
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.AppNewNetwork.Icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>